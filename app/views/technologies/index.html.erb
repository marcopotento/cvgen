<% provide :title, "Technologies" %>
<% provide :subtitle, "List and add technologies to your projects" %>

<%= simple_form_for(@technology, :html => {:data => {:remote => "true"}}) do |f| %>
    <div id="notice"></div>
    <%= f.input :name, :label => false %>
    <%= f.button :submit, :class => 'btn' %>
<% end %>
<ul id="technologies">
  <% @technologies.each do |technology| %>
      <li><%= technology.name %>&nbsp;<%= icon_link_to "icon-remove", technology, :confirm => 'Are you sure?', :method => :delete, :class => "hidden", :data => {:show => "hover"} %></li>
  <% end %>
</ul>