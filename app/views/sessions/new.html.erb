<% provide(:title, "Login") %>

<div class="page-header">
  <h2>Login</h2>
</div>
<div class="row">
  <div class="span6">
    <%= form_for(:session, :url => sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <div class="button-row">
          <%= f.submit "Login", :class => "btn btn-large btn-primary" %>
        </div>

    <% end %>
  </div>
</div>
