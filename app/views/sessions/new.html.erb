<% provide(:title, "Login") %>
<% provide(:subtitle, "Please sign in to access the admin area.") %>
<%= form_for(:session, :url => sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <div class="button-row">
      <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
    </div>

<% end %>
