<% provide :title, "List Projects" %>
<% provide :subtitle, "List all of your projects" %>

<table id="project-table" class="table table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th>Customer</th>
    <th>Role</th>
    <th>Start</th>
    <th>End</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.customer %></td>
        <td><%= project.role %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.description %></td>
        <td>
          <%= icon_link_to "icon-edit", edit_project_path(project) %>
          <%= icon_link_to "icon-remove", project, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

