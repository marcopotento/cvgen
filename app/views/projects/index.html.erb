<h2>Listing projects</h2>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Role</th>
    <th>Customer</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td><%= project.role %></td>
    <td><%= project.customer %></td>
    <td><%= project.description %></td>
    <td><%= link_to 'Show', project %>&nbsp;<%= link_to 'Edit', edit_project_path(project) %>&nbsp;<%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

