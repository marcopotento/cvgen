<%= form_for(@project, :html => { :class => "form-horizontal" }) do |project_form| %>
    <% if @project.errors.any? %>
        <div class="alert alert-block alert-error">
          <p><strong>Oh snap! You got <%= pluralize(@project.errors.count, "error") %>!</strong> Change this and that
            and <a href="#">try again</a>.</p>
          <ul>
            <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>
      <div class="control-group">
        <%= project_form.label :title, :class => "control-label" %>
        <div class="controls">
          <%= project_form.text_field :title, :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= project_form.label :customer, :class => "control-label" %>
        <div class="controls">
          <%= project_form.text_field :customer, :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= project_form.label :role, :class => "control-label" %>
        <div class="controls">
          <%= project_form.text_field :role, :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <%= project_form.label :description, :class => "control-label" %>
        <div class="controls">
          <%= project_form.text_area :description, :rows => 8, :class => "input-xxlarge" %>
        </div>
      </div>
      <%= render :partial => "technologies/fields", :locals => {:project_form => project_form} %>
    </fieldset>
    <div class="form-actions">
      <%= project_form.submit :class => "btn btn-primary" %>
      <button type="reset" class="btn">Cancel</button>
    </div>
<% end %>
