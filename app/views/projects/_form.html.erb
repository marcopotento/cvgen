<% @project.technologies.build %>
<%= form_for(@project) do |project_form| %>
    <% if @project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
            <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>
      <div class="clearfix">
        <%= project_form.label :title %>
        <div class="input">
          <%= project_form.text_field :title, :class => "xlarge" %>
        </div>
      </div>
      <div class="clearfix">
        <%= project_form.label :customer %>
        <div class="input">
          <%= project_form.text_field :customer, :class => "xlarge" %>
        </div>
      </div>
      <div class="clearfix">
        <%= project_form.label :role %>
        <div class="input">
          <%= project_form.text_field :role, :class => "xlarge" %>
        </div>
      </div>
      <div class="clearfix">
        <%= project_form.label :description %>
        <div class="input">
          <%= project_form.text_area :description, :rows => 8, :class => "xxlarge" %>
        </div>
      </div>
      <%= render :partial => "technologies/fields", :locals => {:project_form => project_form} %>
    </fieldset>
    <div class="actions">
      <%= project_form.submit :class => "btn primary" %>
    </div>
<% end %>
